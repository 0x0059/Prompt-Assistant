{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "noImplicitThis": false,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@prompt-assistant/core": ["packages/core/src"],
      "@prompt-assistant/core/*": ["packages/core/src/*"],
      "@prompt-assistant/ui": ["packages/ui/src"],
      "@prompt-assistant/ui/*": ["packages/ui/src/*"],
      "@prompt-assistant/web": ["packages/web/src"],
      "@prompt-assistant/web/*": ["packages/web/src/*"],
      "@prompt-assistant/extension": ["packages/extension/src"],
      "@prompt-assistant/extension/*": ["packages/extension/src/*"]
    }
  },
  "include": [
    "packages/**/src/**/*.ts",
    "packages/**/src/**/*.d.ts",
    "packages/**/src/**/*.tsx",
    "packages/**/src/**/*.vue",
    "packages/**/__tests__/**/*.ts",
    "utils/**/*.ts",
    "custom.d.ts"
  ],
  "exclude": ["node_modules", "**/node_modules/**", "**/dist/**"]
} 